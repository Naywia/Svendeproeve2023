<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Arkaeologigalleriet.Views.ArtifactInformationView"
             xmlns:viewModel="clr-namespace:Arkaeologigalleriet.ViewModels"
             x:DataType="viewModel:ArtifactInformationViewModel"
             Title="Artefakt infomation">
    <VerticalStackLayout Spacing="10">
        <BoxView Color="CornflowerBlue"
                 CornerRadius="10"
                 WidthRequest="20"
                 HeightRequest="20"
                 HorizontalOptions="End" 
                 Margin="10"/>

        <BoxView Color="CornflowerBlue"
                 CornerRadius="10"
                 WidthRequest="350"
                 HeightRequest="200"
                 HorizontalOptions="Center" 
                 Margin="10"/>

        
        <Border WidthRequest="350" HeightRequest="350" Margin="10,0,0,0"
                    StrokeShape="RoundRectangle 2,2,2,2"
                    BackgroundColor="Transparent"
                    StrokeThickness="1">
            <ScrollView>
                <Label x:Name="Test"/>
            </ScrollView>            
        </Border>
    </VerticalStackLayout>
</ContentPage>